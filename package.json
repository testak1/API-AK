{
  "name": "your-project",
  "scripts": {
    // Frontend
    "build:frontend": "npm run build --prefix frontend",
    "start:frontend": "npm run start --prefix frontend",
    
    // Sanity Studio (CMS)
    "start:studio": "npm run start --prefix studio",
    "deploy:studio": "npm run deploy --prefix studio",
    
    // Combined commands
    "build": "npm run build:frontend",
    "start": "npm run start:frontend",
    "dev": "concurrently \"npm run dev --prefix frontend\" \"npm run dev --prefix studio\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"  // For running both frontend + studio locally
  }
}