{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"   // For Next.js app (frontend)
    },
    {
      "src": "studio/package.json",
      "use": "@vercel/static-build",  // For Sanity Studio
      "config": {
        "distDir": "studio/dist"  // Ensure this points to your studio build output directory
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/studio/(.*)",
      "dest": "studio/dist/$1"   // Route for the Sanity Studio
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"   // Route for the Next.js frontend
    }
  ]
}
