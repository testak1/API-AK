{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"   // For Next.js app (if it's a Next.js frontend)
    },
    {
      "src": "studio/package.json",
      "use": "@vercel/static-build" // For static sites like Sanity Studio
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"   // If your frontend is located in the 'frontend' folder
    }
  ]
}
